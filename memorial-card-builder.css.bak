* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Open Sans', -apple-system, sans-serif;
    background: #f5f7fa;
    color: #1a202c;
}

.status-bar {
    display: flex;
    justify-content: space-between;
    padding: 8px 16px;
    background: #1a202c;
    color: white;
    font-size: 14px;
    font-weight: 600;
}

.mobile-container {
    max-width: 428px;
    margin: 0 auto;
    background: #f5f7fa;
    min-height: 100vh;
    padding-bottom: 40px;
}

.header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 24px 20px;
}

.header h1 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 4px;
}

.header p {
    font-size: 14px;
    opacity: 0.9;
}

.preview-section, .options-section {
    background: white;
    margin: 16px 20px;
    padding: 24px;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

h2 {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 16px;
    color: #1a202c;
}

/* Card Preview - EXACT LAYOUT */
.card-preview {
    aspect-ratio: 3/4;
    background: linear-gradient(to bottom, #87CEEB 0%, #FFB6C1 50%, #DDA0DD 100%);
    border-radius: 8px;
    overflow: visible;
    position: relative;
    padding: 16px;
    display: flex;
    flex-direction: column;
}

.header-text {
    text-align: center;
    font-size: 18px;
    font-weight: 700;
    color: white;
    margin-bottom: 12px;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.photo-area {
    width: 100%;
    height: 200px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
    overflow: visible;
}

.upload-btn {
    text-align: center;
    color: white;
}

.camera-icon {
    margin-bottom: 4px;
}

#photoArea img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Dates and QR Row */
.dates-qr-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
}

.date-box {
    text-align: center;
    color: white;
    flex: 1;
}

.date-box.left {
    text-align: left;
}

.date-box.right {
    text-align: right;
}

.date-value {
    display: block;
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 4px;
}

.date-label {
    display: block;
    font-size: 14px;
    opacity: 0.9;
}

.qr-code-box {
    text-align: center;
    flex: 1;
}

.qr-code {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.4);
    margin: 0 auto 8px;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: white;
    font-size: 12px;
}

.qr-name {
    font-size: 14px;
    color: white;
    font-weight: 600;
}

/* Psalm Section */
.psalm-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 8px 0;
}

.psalm-text {
    font-size: 12px;
    line-height: 1.6;
    color: white;
    text-align: center;
    margin-bottom: 8px;
}

.psalm-reference {
    text-align: right;
    font-size: 14px;
    color: white;
    font-weight: 600;
}

/* DASH Branding */
.dash-branding {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    color: white;
    margin-top: 8px;
}

.brand-link {
    font-size: 12px;
}

/* Form Elements */
.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #4a5568;
}

.form-group input {
    width: 100%;
    padding: 12px;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    font-size: 14px;
    font-family: 'Open Sans', sans-serif;
}

/* Submit Section */
.submit-section {
    padding: 0 20px;
    text-align: center;
}

.submit-btn {
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 18px;
    border-radius: 12px;
    font-size: 18px;
    font-weight: 700;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

/* Exact Image Display */
.exact-image {
    width: 100%;
    height: auto;
    display: block;
    border: 2px solid #e2e8f0;
}

.upload-note {
    text-align: center;
    color: #718096;
    font-size: 14px;
    margin: 16px 0;
}

/* Side Selector */
.side-selector-section {
    background: white;
    margin: 16px 20px;
    padding: 16px;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.side-toggle {
    display: flex;
    gap: 8px;
}

.side-btn {
    flex: 1;
    padding: 12px;
    border: 2px solid #e2e8f0;
    background: white;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.side-btn.active {
    border-color: #667eea;
    background: #f0f4ff;
    color: #667eea;
}

.card-side.hidden {
    display: none;
}

.back-card {
    background: linear-gradient(to bottom, #e8f5e9 0%, #c8e6c9 100%);
}

.back-content {
    padding: 20px;
    text-align: center;
}

.back-content h3 {
    font-size: 24px;
    color: #4B0082;
    margin-bottom: 16px;
}

.back-content p {
    font-size: 16px;
    color: #666;
}

/* File Input Styling */
.file-input {
    margin-top: 16px;
    padding: 12px;
    border: 2px dashed #667eea;
    border-radius: 8px;
    width: 100%;
    background: #f0f4ff;
    cursor: pointer;
    text-align: center;
    font-size: 14px;
    color: #667eea;
}
